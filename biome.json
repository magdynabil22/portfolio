{
    "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
    "vcs": {
        "enabled": false,
        "clientKind": "git",
        "useIgnoreFile": false
    },
    "files": {
        "ignoreUnknown": false,
        "ignore": []
    },
    "formatter": {
        "enabled": false,
        "indentStyle": "space",
        "indentWidth": 2,
        "lineWidth": 100
    },
    "organizeImports": {
        "enabled": false
    },
    "linter": {
        "enabled": true,
        "rules": { "recommended": true }
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "double"
        }
    }
}